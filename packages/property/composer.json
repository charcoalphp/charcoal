{
    "type": "library",
    "name": "charcoal/property",
    "description": "Charcoal Property defines an object (provides metadata)",
    "keywords": ["charcoal"],
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        },
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "5.x-dev"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-fileinfo": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "charcoal/config": "^5.0",
        "charcoal/core": "^5.0",
        "charcoal/factory": "^5.0",
        "charcoal/image": "^5.0",
        "charcoal/translator": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "php-coveralls/php-coveralls": "^2.2",
        "cache/void-adapter": "^1.0",
        "mustache/mustache": "^2.11",
        "tedivm/stash": "~0.16",
        "pimple/pimple": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal"
        }
    },
    "replace": {
        "locomotivemtl/charcoal-property": "*"
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find src tests -type f -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "php vendor/bin/phpcs -ps --colors src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors src/ tests/",
        "phpunit": "php vendor/bin/phpunit --coverage-text"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
