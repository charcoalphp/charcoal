{
    "type": "library",
    "name": "locomotivemtl/charcoal-app",
    "description": "Charcoal application, based on Slim 3",
    "keywords": ["charcoal", "framework", "slim", "cms"],
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        },
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "league/climate": "^3.2",
        "league/flysystem": "^1.0",
        "locomotivemtl/charcoal-cache": "^1.2",
        "locomotivemtl/charcoal-config": "^1.2",
        "locomotivemtl/charcoal-factory": "^1.2",
        "locomotivemtl/charcoal-translator": "^1.2",
        "locomotivemtl/charcoal-view": "^1.2",
        "monolog/monolog": "^1.17",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "slim/slim": "^3.7"
    },
    "require-dev": {
        "league/flysystem-aws-s3-v3": "^1.0",
        "league/flysystem-memory": "^1.0",
        "league/flysystem-sftp": "^1.0",
        "mockery/mockery": "^1.0",
        "mustache/mustache": "^2.11",
        "php-coveralls/php-coveralls": "^2.2",
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "tedivm/stash": "~0.16"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal"
        }
    },
    "bin": [
        "bin/charcoal"
    ],
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ],
        "phplint": "find src tests -type f -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "php vendor/bin/phpcs -ps --colors src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors src/",
        "phpstan": "php vendor/bin/phpstan analyze -l1 src/",
        "phpunit": "php vendor/bin/phpunit --coverage-text"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
