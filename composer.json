{
    "name": "locomotivemtl/charcoal-core",
    "type": "library",
    "description": "Charcoal Web Framework",
    "keywords": [ "locomotive", "charcoal", "framework", "cms" ],
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        },
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "pimple/pimple": "^3.0",
        "locomotivemtl/charcoal-config": "~0.7",
        "locomotivemtl/charcoal-factory": "~0.4",
        "locomotivemtl/charcoal-property": "~0.4.3",
        "locomotivemtl/charcoal-view": "~0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.4",
        "satooshi/php-coveralls": "^1.0",
        "cache/void-adapter": "^0.3.0",
        "mockery/mockery": "^0.9.6",
        "locomotivemtl/charcoal-app": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal"
        }
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
        "phpcs": "phpcs --config-set ignore_warnings_on_exit 1;php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
    }
}
